<h1>Edit <%= @kind.name %></h1>

<% if @kind.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @kind.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/kinds/<%= @kind.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="kind_name">Updated Name</label>
  <input id="kind_name" name="name" type="text" value="<%= @kind.name %>">
  <button>Update Species</button>
</form>
